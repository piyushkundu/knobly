rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is admin
    function isAdmin() {
      return request.auth != null && request.auth.token.email == 'piyushkundu99@gmail.com';
    }
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // PROFILES: Users can read all, write only their own profile
    match /profiles/{userId} {
      allow read: if true;
      allow write: if isAdmin() || (isAuthenticated() && request.auth.uid == userId);
    }
    
    // USER SETTINGS: Users can only access their own settings
    match /user_settings/{userId} {
      allow read: if isAuthenticated() && request.auth.uid == userId;
      allow write: if isAuthenticated() && request.auth.uid == userId;
    }
    
    // APPS: Users can read all, only admin can write global apps, users can write their own
    match /apps/{appId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin() || 
        (isAuthenticated() && resource.data.user_id == request.auth.uid);
    }
    
    // VIDEOS: Anyone can read, only admin can write
    match /videos/{videoId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // NOTIFICATIONS: Authenticated users can read, only admin can write
    match /notifications/{notifId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // TESTS: Authenticated users can read, only admin can write
    match /tests/{testId} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
    
    // EXAM USER STATE: Users can read/write their own exam state
    match /exam_user_state/{stateId} {
      allow read: if isAuthenticated();
      allow create: if isAuthenticated();
      allow update, delete: if isAdmin() || 
        (isAuthenticated() && resource.data.user_id == request.auth.uid);
    }
    
    // LEADERBOARD: Public read, users can write their own entry
    match /leaderboard/{entryId} {
      allow read: if true;
      allow write: if isAdmin() || 
        (isAuthenticated() && resource.data.user_id == request.auth.uid);
      allow create: if isAuthenticated();
    }
    
    // BADGES: Public read, only admin can write
    match /badges/{badgeId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // LEVELS: Public read, only admin can write
    match /levels/{levelId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // GLOBAL APPS: Public read, only admin can write
    match /global_apps/{appId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    // Catch-all for any other collections - admin only write
    match /{document=**} {
      allow read: if isAuthenticated();
      allow write: if isAdmin();
    }
  }
}
